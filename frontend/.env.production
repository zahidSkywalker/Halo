# Production Environment Variables for Vercel
# Backend API URL (Update this with your actual Render backend URL)
NEXT_PUBLIC_API_URL=https://halo-backend-wye4.onrender.com

# WebSocket URL (if you have real-time features)
NEXT_PUBLIC_WS_URL=wss://halo-backend-wye4.onrender.com

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_MESSAGING=true
NEXT_PUBLIC_ENABLE_VIDEO_UPLOADS=true

# NextAuth Configuration (if using NextAuth)
NEXTAUTH_URL=https://your-vercel-app.vercel.app
NEXTAUTH_SECRET=your_nextauth_secret_key_here