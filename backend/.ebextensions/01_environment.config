option_settings:
  # Environment variables
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: production
    PORT: 8081
    HOST: 0.0.0.0
    
    # Database Configuration (will be updated with actual values)
    DATABASE_URL: postgresql://halo_admin:your_password@your_rds_endpoint:5432/halo_db
    REDIS_URL: redis://your_redis_endpoint:6379
    
    # JWT Configuration
    JWT_SECRET: your_super_secure_jwt_secret_key_here_make_it_long_and_random
    JWT_EXPIRES_IN: 7d
    JWT_REFRESH_EXPIRES_IN: 30d
    
    # CORS Configuration
    CORS_ORIGIN: https://your-frontend-domain.com
    
    # Rate Limiting
    RATE_LIMIT_MAX_REQUESTS: 100
    RATE_LIMIT_WINDOW_MS: 900000
    
    # Security
    BCRYPT_ROUNDS: 12
    
    # File Upload Limits
    MAX_FILE_SIZE: 10485760
    MAX_FILES_PER_POST: 4
    
    # Logging
    LOG_LEVEL: info

  # Node.js Configuration
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "npm start"
    NodeVersion: 18.17.0
    ProxyServer: nginx

  # Load Balancer Configuration
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx

  # Auto Scaling Configuration
  aws:autoscaling:asg:
    MinSize: 1
    MaxSize: 4

  # Health Check Configuration
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
    HealthCheckType: ELB
    HealthCheckGracePeriod: 300

  # Security Group Configuration
  aws:autoscaling:launchconfiguration:
    SecurityGroups: sg-xxxxxxxxx  # Replace with your security group ID