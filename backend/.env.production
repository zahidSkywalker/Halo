# Backend Environment Variables for Render
NODE_ENV=production
PORT=3001

# Database
DATABASE_URL=postgresql://halo_user:halo_password@localhost:5432/halo_db

# Redis (optional)
REDIS_URL=redis://localhost:6379

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_this_in_production

# CORS - Allow Vercel frontend
CORS_ORIGIN=https://halo-chi-eosin.vercel.app,https://halo-chi-eosin.vercel.app/,http://localhost:3000

# AWS S3 (if using)
AWS_S3_BUCKET=halo-media-bucket
AWS_REGION=us-east-1

# Other settings
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100