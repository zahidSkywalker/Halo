# Production Environment Variables for AWS Deployment

# Server Configuration
NODE_ENV=production
PORT=8081
HOST=0.0.0.0

# Database Configuration (Update with your actual RDS values)
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/halo_social_media

# Redis Configuration (Update with your actual ElastiCache values)
REDIS_URL=redis://your-elasticache-endpoint:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration (Update with your frontend domain)
CORS_ORIGIN=https://main.d28bva28pxsx9h.amplifyapp.com

# AWS S3 Configuration (Update with your actual S3 bucket)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security
BCRYPT_ROUNDS=12

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_POST=4

# Logging
LOG_LEVEL=info